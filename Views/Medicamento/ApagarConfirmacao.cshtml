@model MedicamentoModel

@{
    ViewData["Title"] = "Confirmação Apagar Medicamento";
}

<div class="text-center">
    <h3>Realmente deseja apagar o medicamento (@Model.NomeMedicamento)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Medicamento" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Medicamento" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>